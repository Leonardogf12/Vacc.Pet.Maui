<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"     
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"             
             xmlns:local="clr-namespace:VaccPet.Helpers.Behaviors"      
             xmlns:vm="clr-namespace:VaccPet.MVVM.ViewModels"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"             
             x:Class="VaccPet.MVVM.Views.RegisterPetPage"
             x:DataType="vm:RegisterPetViewModel"
             BackgroundColor="{StaticResource Primary}"
             Title="Novo Pet">

    <ScrollView VerticalOptions="FillAndExpand">
        <Grid Margin="15,10,15,0" RowSpacing="10" ColumnSpacing="10" >
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Photo -->
            <StackLayout Grid.Row="0" Grid.ColumnSpan="2">
                <Grid ColumnSpacing="10" HorizontalOptions="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Grid.Column="0"
                            HeightRequest="100" 
                            Padding="1"                        
                            BackgroundColor="{StaticResource White}"                       
                            WidthRequest="100" StrokeThickness="0.5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="100" />
                        </Border.StrokeShape>
                        <StackLayout>
                            <Image Source="{Binding ImagePath}"
                                   WidthRequest="100" 
                                   HeightRequest="100" 
                                   Aspect="AspectFill"/>
                        </StackLayout>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GetImageFromGalleryCommand}"/>
                        </Border.GestureRecognizers>

                    </Border>
                </Grid>
            </StackLayout>

            <!-- Name -->
            <StackLayout Grid.Row="1" Grid.ColumnSpan="2" Orientation="Vertical">
                <Label Text="Nome" Style="{StaticResource lblTitlesStyle}"/>
                <Border Style="{StaticResource borberCustomStyle}" >
                    <Entry x:Name="entryName"                              
                           Text="{Binding Name}"  
                           TextColor="{StaticResource Primary}"
                           Placeholder="Nome"                              
                           Keyboard="Text"
                           Style="{StaticResource entryCustomStyle}">
                        <Entry.Behaviors>
                            <local:TextValidationsBehaviors x:TypeArguments="Entry" x:Name="nameBehaviorValidator" />
                        </Entry.Behaviors>
                    </Entry>
                </Border>
            </StackLayout>

            <!-- Animals -->
            <StackLayout Grid.Row="2" Grid.ColumnSpan="2">
                <Label Text="Animal" Style="{StaticResource lblTitlesStyle}"/>
                <dxe:ComboBoxEdit x:Name="comboBoxAnimal"
                                  Margin="2,0,2,0"
                                  PlaceholderText="Selecione"
                                  PlaceholderColor="Gray"
                                  Style="{StaticResource comboBoxStyle}" 
                                  ItemsSource="{Binding AnimalsList}"
                                  SelectedItem="{Binding AnimalSelected}"
                                  DisplayMember="Value"/>



                <!--<Border Style="{StaticResource borberCustomStyle}">
                    <Picker x:Name="pickerAnimal"
                            Title="Selecione"                           
                            Margin="15,0,10,0"
                            TitleColor="{StaticResource Gray400}" 
                            ItemsSource="{Binding AnimalsList}"
                            ItemDisplayBinding="{Binding Value}"
                            SelectedItem="{Binding AnimalSelected}" 
                            TextColor="{StaticResource Primary}" 
                            FontSize="Medium">
                        <Picker.Behaviors>
                            <local:GeralValidationsBehaviors x:TypeArguments="Picker" x:Name="animalBehaviorValidator"/>
                        </Picker.Behaviors>
                    </Picker>
                </Border>-->

            </StackLayout>

            <!--Breeds--><!--
            <StackLayout Grid.Row="2" Grid.Column="1">
                <Label Text="RaÃ§a" Style="{StaticResource lblTitlesStyle}"/>
                <Border Style="{StaticResource borberCustomStyle}">
                    <Picker x:Name="pickerRace"
                            Title="Selecione"                           
                            Margin="15,0,10,0"
                            TitleColor="{StaticResource Gray400}" 
                            ItemsSource="{Binding BreedsList}"
                            ItemDisplayBinding="{Binding Value}"
                            SelectedItem="{Binding BreedSelected}" 
                            TextColor="{StaticResource Primary}" 
                            FontSize="Medium">

                        <Picker.Behaviors>
                            <local:GeralValidationsBehaviors x:TypeArguments="Picker" x:Name="breedBehaviorValidator"/>
                        </Picker.Behaviors>

                    </Picker>
                </Border>

            </StackLayout>-->

            <!-- Color -->
            <StackLayout Grid.Row="3" Grid.ColumnSpan="2"  Orientation="Vertical">
                <Label Text="Cor" Style="{StaticResource lblTitlesStyle}"/>
                <Border Style="{StaticResource borberCustomStyle}">
                    <Entry x:Name="entryColor"                           
                           Text="{Binding Color}"
                           TextColor="{StaticResource Primary}"
                           Placeholder="Cor"                                                    
                           Keyboard="Text"                          
                           Style="{StaticResource entryCustomStyle}">
                        <Entry.Behaviors>
                            <local:TextValidationsBehaviors x:TypeArguments="Entry" x:Name="colorBehaviorValidator"/>
                        </Entry.Behaviors>
                    </Entry>
                </Border>
            </StackLayout>

            <!-- Weight -->
            <StackLayout Grid.Row="4" Grid.Column="0" Orientation="Vertical">
                <Label Text="Peso KG" Style="{StaticResource lblTitlesStyle}"/>
                <Border Style="{StaticResource borberCustomStyle}">
                    <Entry x:Name="entryWeigth"
                           Text="{Binding Weight}" 
                           TextColor="{StaticResource Primary}"
                           Placeholder="0.0 KG"
                           MaxLength="5"                                                                                                                                   
                           Keyboard="Numeric"                                                                              
                           Style="{StaticResource entryCustomStyle}">
                        <Entry.Behaviors>
                            <local:NumericValidationsBehaviors x:TypeArguments="Entry" x:Name="weightBehaviorValidator"/>
                        </Entry.Behaviors>
                    </Entry>
                </Border>
            </StackLayout>

            <!-- BirthDate -->
            <StackLayout Grid.Row="4" Grid.Column="1">
                <Label Text="Nascimento" Style="{StaticResource lblTitlesStyle}"/>
                <Border Style="{StaticResource borberCustomStyle}">
                    <DatePicker  TextColor="{StaticResource Primary}" 
                                 Margin="15,0,10,0"
                                 MinimumDate="01/01/2008"
                                 MaximumDate="12/31/2030"
                                 FontSize="Medium" 
                                 Date="{Binding BirthDate}">
                        <DatePicker.Behaviors>
                            <local:DateValidationsBehaviors x:TypeArguments="DatePicker" x:Name="birthDateBehaviorValidator"/>
                        </DatePicker.Behaviors>
                    </DatePicker>
                </Border>
            </StackLayout>

            <!-- Sex -->
            <StackLayout Grid.Row="5" Grid.Column="0">
                <Label Text="Sexo" Style="{StaticResource lblTitlesStyle}"/>
                <Border BackgroundColor="#2F3855" StrokeThickness="0" Style="{StaticResource borberCustomStyle}">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Switch OnColor="{StaticResource Quinary}" ThumbColor="{StaticResource Secondary}" IsToggled="{Binding IsToggledSex}"/>
                        <Label Text="{Binding IsSexText}" FontSize="Medium" TextColor="{StaticResource Quinary}" Margin="0,10,0,0" />
                    </StackLayout>
                </Border>
            </StackLayout>

            <!-- IsCastrated -->
            <StackLayout Grid.Row="5" Grid.Column="1">
                <Label Text="Castrado(a)" Style="{StaticResource lblTitlesStyle}"/>
                <Border BackgroundColor="#2F3855" StrokeThickness="0" Style="{StaticResource borberCustomStyle}">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Switch OnColor="{StaticResource Quinary}" ThumbColor="{StaticResource Secondary}" IsToggled="{Binding IsToggledCatrated}"/>
                        <Label Text="{Binding IsCastratedText}" FontSize="Medium" TextColor="{StaticResource Quinary}" Margin="0,10,0,0" />
                    </StackLayout>
                </Border>
            </StackLayout>

            <!-- Observation -->
            <StackLayout  Grid.Row="6" Grid.ColumnSpan="2" Orientation="Vertical">
                <Label  Text="ObservaÃ§Ã£o" Style="{StaticResource lblTitlesStyle}"/>
                <Border Style="{StaticResource borberCustomStyle}" HeightRequest="80">
                    <Editor Placeholder="ObservaÃ§Ã£o"                                                     
                            Text="{Binding Observation}"
                            Margin="15,0,10,0"
                            TextColor="{StaticResource Primary}"                         
                            Keyboard="Text"
                            HeightRequest="80"                                        
                            FontSize="Medium"
                            PlaceholderColor="{StaticResource Gray400}">
                        <Editor.Behaviors>
                            <local:TextValidationsBehaviors x:TypeArguments="Editor" x:Name="observationBehaviorValidator"/>
                        </Editor.Behaviors>
                    </Editor>
                </Border>
            </StackLayout>

            <!-- Button Save -->
            <StackLayout Grid.Row="7" Grid.ColumnSpan="2">
                <Button x:Name="btnSave"
                        Text="Salvar"                        
                        TextColor="{StaticResource White}"                         
                        Style="{StaticResource btnDefaultStyle}"                       
                        Clicked="btnSave_Clicked"/>
                <!--Command="{Binding AddPetCommand}"-->
            </StackLayout>

        </Grid>
    </ScrollView>
</ContentPage>