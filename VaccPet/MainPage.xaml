    <ShellContent Title="Home"                    
                  Shell.BackgroundColor="{StaticResource Primary}"                     
                  Shell.ForegroundColor="White"                  
                  Shell.TitleColor="{StaticResource Secondary}"                                                                                 
                  Icon="home_primary"                   
                  Route="VaccPet.MVVM.Views.HomePage"
                  Shell.TabBarIsVisible="False"
                  ContentTemplate="{DataTemplate views:HomePage}"/>


    <ShellContent Title="Pets"                    
                  Icon="breed_primary"   
                  Shell.TitleColor="{StaticResource Secondary}"
                  Shell.BackgroundColor="{StaticResource Primary}"     
                  Shell.ForegroundColor="White"                           
                  Route="VaccPet.MVVM.Views.ListPetPage"
                  ContentTemplate="{DataTemplate views:ListPetPage}">
        
    </ShellContent>

    <Shell.FlyoutHeader>
              
        <Grid HeightRequest="100">

            <Grid.Background>
                <LinearGradientBrush EndPoint="0,2">
                    <GradientStop Color="{StaticResource Primary}" Offset="0" />
                    <GradientStop Color="{StaticResource SecondaryFrame}" Offset="1.0" />
                </LinearGradientBrush>
            </Grid.Background>
            
        </Grid>
    </Shell.FlyoutHeader>

    
</Shell>
